case "${OSTYPE}" in
  darwin*)
  # Mac(Unix)
    alias ls='ls -hFG' # Mac—p
  ;;
  linux*)
  # Linux
    alias ls='ls -hF --color=auto'
  ;;
esac

alias ll='ls -l'
alias la='ls -A'
alias lal='ls -Al'
alias vi='vim'
alias tmux='tmux -2'
alias ta='tmux attach'
function cdls() {
  \cd $1;
  ls;
}
alias cd=cdls
